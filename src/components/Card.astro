---
interface Props {
    title: string;
    body: string;
    date: string;
    href: string;
}

const {href, title, body, date} = Astro.props;
---

<a href={href} class="link-card">
    <div>
        <h2>{title}</h2>
        <span class="card-date">{date}</span>
    </div>
    <p>{body}</p>
</a>
<style>
    .link-card {
        display: flex;
        flex-direction: column;
        padding: 1rem;
        border-radius: 12px;
        transition: background 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        color: inherit;
        text-decoration: none;
        line-height: 1.4;
        font-size: 16px;
    }

    .link-card div {
        display: inline-flex;
        align-items: center;
        justify-content: space-between;
    }

    .link-card .card-date {
        font-size: 14px;
    }

    .link-card h2 {
        font-size: inherit;
        margin: 0;
        color: rgb(10, 10, 10);
    }

    p {
        font-size: 14px;
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    .link-card:is(:hover, :focus-within) {
        background: rgb(220, 220, 220)
    }
</style>
